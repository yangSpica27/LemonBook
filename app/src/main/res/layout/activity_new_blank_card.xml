<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uifabric_white"
        android:paddingStart="@dimen/default_layout_margin"
        android:paddingTop="@dimen/default_view_margin"
        android:text="卡片名称"
        android:textAppearance="@style/TextAppearance.UIFabric.Body2"
        android:textColor="@color/uifabric_gray_500"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uifabric_white"
        android:hint="校园卡"
        android:lines="1"
        android:paddingStart="@dimen/default_layout_margin"
        android:paddingTop="@dimen/default_view_margin"
        android:paddingBottom="@dimen/default_view_margin"
        android:textAppearance="@style/TextAppearance.UIFabric.Heading"
        app:layout_constraintTop_toBottomOf="@id/tv_title_card_name" />

    <TextView
        android:id="@+id/tv_card_title_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uifabric_white"
        android:paddingStart="@dimen/default_layout_margin"
        android:paddingTop="@dimen/default_view_margin"
        android:text="卡号"
        android:textAppearance="@style/TextAppearance.UIFabric.Body2"
        android:textColor="@color/uifabric_gray_500"
        app:layout_constraintTop_toBottomOf="@id/lin1" />

    <View
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/ms_row_divider"
        app:layout_constraintTop_toBottomOf="@id/et_card_name" />

    <EditText
        android:id="@+id/et_card_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uifabric_white"
        android:hint="000000000"
        android:inputType="number"
        android:lines="1"
        android:paddingStart="@dimen/default_layout_margin"
        android:paddingTop="@dimen/default_view_margin"
        android:paddingBottom="@dimen/default_view_margin"
        android:textAppearance="@style/TextAppearance.UIFabric.Heading"
        app:layout_constraintTop_toBottomOf="@id/tv_card_title_num" />

    <View
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/ms_row_divider"
        app:layout_constraintTop_toBottomOf="@id/et_card_num" />

    <Button
        android:id="@+id/btn_save_card"
        style="@style/Widget.UIFabric.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:text="保存记录"
        android:textSize="@dimen/calendar_date_title_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lin2" />


</androidx.constraintlayout.widget.ConstraintLayout>